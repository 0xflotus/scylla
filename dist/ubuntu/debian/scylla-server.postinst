#!/bin/sh

set -e

if [ "$1" = configure ]; then
    adduser --system \
            --quiet \
            --home /var/lib/scylla \
            --no-create-home \
            --disabled-password \
            --group scylla
    chown -R scylla:scylla /var/lib/scylla
fi

ln -sfT /etc/scylla /var/lib/scylla/conf

#DEBHELPER#
