#!/bin/bash -e
#
#  Copyright (C) 2015 ScyllaDB

. /etc/os-release

if is_debian_variant; then
    if [ "`sestatus | awk '{print $3}'`" != "disabled" ]; then
        setenforce 0
        sed -e "s/enforcing/disabled/" /etc/sysconfig/selinux > /tmp/selinux
        mv /tmp/selinux /etc/sysconfig/
    fi
fi
