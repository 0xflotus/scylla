{
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `access_key`}}",
      "secret_key": "{{user `secret_key`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "security_group_id": "{{user `security_group_id`}}",
      "region": "{{user `region`}}",
      "associate_public_ip_address": "{{user `associate_public_ip_address`}}",
      "source_ami": "ami-61bbf104",
      "user_data_file": "user_data.txt",
      "instance_type": "{{user `instance_type`}}",
      "ssh_username": "centos",
      "ssh_timeout": "5m",
      "ami_name": "scylla_{{isotime | clean_ami_name}}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/scylla-ami",
      "destination": "/home/centos/scylla-ami"
    },
    {
      "type": "file",
      "source": "files/.bash_profile",
      "destination": "/home/centos/.bash_profile"
    },
    {
      "type": "file",
      "source": "../../scripts/scylla_install",
      "destination": "/home/centos/scylla_install"
    },
    {
      "type": "file",
      "source": "scylla-server.x86_64.rpm",
      "destination": "/home/centos/scylla-server.x86_64.rpm"
    },
    {
      "type": "file",
      "source": "scylla-jmx.noarch.rpm",
      "destination": "/home/centos/scylla-jmx.noarch.rpm"
    },
    {
      "type": "file",
      "source": "scylla-tools.noarch.rpm",
      "destination": "/home/centos/scylla-tools.noarch.rpm"
    },
    {
      "type": "shell",
      "inline": [
          "sudo sh -x -e /home/centos/scylla_install -a -l /home/centos"
      ]
    }
  ],
  "variables": {
    "access_key": "",
    "secret_key": "",
    "subnet_id": "",
    "security_group_id": "",
    "region": "",
    "associate_public_ip_address": "",
    "instance_type": ""
  }
}
